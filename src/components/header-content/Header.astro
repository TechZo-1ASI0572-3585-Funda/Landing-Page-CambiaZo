<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/assets/images/icons/cambiazo-icon.ico" type="image/x-icon">
    <title>CambiaZo</title>
    <style>
        header {
            background-color: #ffd146;
            padding: 8px 16px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1000;
        }

        .header-content {
            width: 100%;
            max-width: 1100px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo img {
            width: 120px;
        }

        .navbar ul {
            list-style: none;
            display: flex;
            gap: 12px;
            margin: 0;
            padding: 0;
        }

        .navbar a {
            color: black;
            font-weight: 650;
            text-decoration: none;
            font-size: 15px;
            padding: 8px 12px;
            display: block;
            border-radius: 5px;
            transition: background-color 0.3s, color 0.3s;
        }

        .navbar ul :hover {
            background-color: #ffffff;
            color: #000000;
            border-radius: 8px;
        }

        .header-buttons {
            display: flex;
            gap: 10px; /* Espaciado entre los botones */
        }
        
        .header-buttons .button {
            background-color: transparent;
            border: black 2px solid;
            color: black;
            font-weight: 650;
            text-decoration: none;
            font-size: 13px;
            padding: 6px 10px;
            border-radius: 5px;
            transition: background-color 0.3s, color 0.3s;
        }
        
        .header-buttons .button:hover {
            background-color: #ffffff;
            color: #000000;
        }

        .menu-icon {
            display: none;
            margin-left: auto;
        }

        .menu-icon img {
            width: 35px;
            cursor: pointer;
        }

        @media (max-width: 768px) {
            .navbar ul {
                display: none;
                flex-direction: column;
                gap: 8px;
                position: absolute;
                top: 52px;
                right: 32px;
                background-color: #ffd146;
                border: 1px solid black;
                border-radius: 5px;
                padding: 10px 0;
                width: 80%;
                z-index: 999;
            }

            .navbar.active ul {
                display: flex;
            }

            .header-button {
                order: 1;
                display: flex;
                align-content: end;
                margin-left: auto;
            }

            .menu-icon {
                order: 2;
                margin-right: 20px;
                display: block;
            }

            .logo img {
                width: 110px;
                margin-right: 10px;
            }
        }

        body {
            padding-top: 80px;
        }

    </style>
</head>
<body>
<header class="header">
    <div class="header-content">
        <div class="logo">
            <a href="/">
                <img src="/assets/logo/cambiazo_logo.png" alt="CambiaZo" width="190px"/>
            </a>
        </div>
        <nav class="navbar">
            <ul>
                <li><a href="#features">Nosotros</a></li>
                <li><a href="#cards">Características</a></li>
                <li><a href="#plans">Planes</a></li>
                <li><a href="#contact-us">Contáctanos</a></li>
            </ul>
        </nav>
        <div class="header-buttons">
            <a href="" class="button">Pruébalo ahora</a>
            <a href="https://play.google.com/store" class="button">Descargar ahora</a>
        </div>
        <div class="menu-icon">
            <img src="/assets/images/icons/menu-icon.png" alt="Menu Icon">
        </div>
    </div>
</header>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const menuIcon = document.querySelector('.menu-icon') as HTMLElement | null;
        const navbar = document.querySelector('.navbar') as HTMLElement | null;

        if (menuIcon && navbar) {
            menuIcon.addEventListener('click', () => {
                navbar.classList.toggle('active');
            });
        } else {
            console.error('menuIcon o navbar no encontrados.');
        }
    });
</script>


</body>